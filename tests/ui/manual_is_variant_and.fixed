#[macro_use]
extern crate option_helpers;

struct Foo<T>(T);

impl<T> Foo<T> {
    fn map<F: FnMut(T) -> bool>(self, mut f: F) -> Option<bool> {
        Some(f(self.0))
    }
}

fn foo() -> Option<bool> {
    Some(true)
}

macro_rules! some_true {
    () => {
        Some(true)
    };
}
macro_rules! some_false {
    () => {
        Some(false)
    };
}

macro_rules! into_iter {
    ($x:expr) => {
        $x.into_iter()
    };
}

macro_rules! mac {
    (some $e:expr) => {
        Some($e)
    };
    (some_map $e:expr) => {
        Some($e).map(|x| x % 2 == 0)
    };
    (map $e:expr) => {
        $e.map(|x| x % 2 == 0)
    };
    (eq $a:expr, $b:expr) => {
        $a == $b
    };
}

#[clippy::msrv = "1.69"]
fn under_msrv_is_some_and(opt: Option<u32>, res: Result<u32, ()>) {
    let _ = res.map(|x| x != 0) == Ok(true);
    let _ = res.into_iter().any(|x| x != 0);
    let _ = opt.map(|x| x != 0).unwrap_or_default();
    let _ = opt.iter().all(|x| *x != 0);
    let _ = opt.iter().any(|&x| x != 0);
}

