    let condition = |x: &i32| *x > 10;

    opt.as_ref().is_some_and(|x| condition(x));
    //~^ manual_is_variant_and
    opt.as_ref().is_none_or(|x| !condition(x));
    //~^ manual_is_variant_and
}

